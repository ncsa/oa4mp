<!--
    See https://oa4mp.org/common/configuration/derby-store.html
    This assumes you have a derby server yoou are running and are creating
    your database in that.
-->

<derby username="YOUR_USERNAME"
       password="YOUR_PASSWORD"
       bootPassword="YOUR_BOOT_PASSWORD"
       storeType="server"
       path="YOUR_PATH"
       database="YOUR_DATABASE"
       schema="YOUR_SCHEMA">
    <transactions/>
    <clients/>
    <clientApprovals/>
    <permissions/>
    <adminClients/>
    <txStore/>
    <voStore/>
</derby>