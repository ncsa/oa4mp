#! /usr/bin/env -S qdl-run
// If you want to run an indivdual test, add the next two lines to it or none of the utilities
// will be found.
path := os_env('NCSA_DEV_INPUT')+'/oa4mp/server-test/src/main/resources/flow-tests';
script_path(path ~ script_path());

test.:=(path + '/auto/tests/') + ['basic.qdl',
                                  'oauth-basic-no-refresh.qdl',
                                  'oidc-test-overrides.qdl'];
server_lifetimes.:=script_run('auto/tests/query_server_defaults.qdl'); // in seconds from the server

say('**** Automated test suite for OA4MP. ****');
script_load('runner.qdl', test.);
